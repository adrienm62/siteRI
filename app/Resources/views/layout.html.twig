{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

		<title>{% block title %}Gestion des relations international{% endblock %}</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" />
		{% endblock %}
	</head>

	<body>
		<div class="container">
			<div id="header" class="hero-unit">
				<h1>Site Relations Internationales</h1>
				<p>Ce projet est propulsé par l'IUT de Lens.</p>
				
			</div>

			<div class="row">
				<div id="menu" class="span3">
					<h3>Site relations internationales</h3>
					
					
				</div>
				<div id="content" class="span9">
					{% block body %}
					{% endblock %}
				</div>
			</div>

			<hr>

			<footer>
				<p>IUT de Lens - Hélène Jacquin - Adrien Mercier -Antoine Dartique - Jocelyn Dusautoir </p>
			</footer>
		</div>

	{% block javascripts %}
		{# Ajoutez ces javascripts si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
		<script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
	{% endblock %}

	</body>
</html>